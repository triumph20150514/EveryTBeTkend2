<?xml version="1.0" encoding="utf-8"?>
<com.trimph.everything.weight.ResideLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ResideLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trimph.everything.ui.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/slide_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/c"
        android:padding="@dimen/dp_40">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/meizi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:padding="15dp"
                    android:text="妹子"
                    android:textColor="@color/bbn_shifting_item_ripple_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:padding="15dp"
                    android:text="主题"
                    android:textColor="@color/bbn_shifting_item_ripple_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:padding="15dp"
                    android:text="关于"
                    android:textColor="@color/bbn_shifting_item_ripple_color"
                    android:textSize="18sp" />

            </LinearLayout>


        </ScrollView>

    </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/mian_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/c">

        </FrameLayout>

        <it.sephiroth.android.library.bottomnavigation.BottomNavigation
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:bbn_entries="@menu/bottom_menu_layout"></it.sephiroth.android.library.bottomnavigation.BottomNavigation>

    </android.support.design.widget.CoordinatorLayout>

</com.trimph.everything.weight.ResideLayout>
